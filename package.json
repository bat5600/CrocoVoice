{
  "name": "croco-voice",
  "productName": "CrocoVoice",
  "version": "1.0.0",
  "description": "Voice-to-Text application using Electron and OpenAI Whisper",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make:win": "electron-forge make --platform=win32",
    "supabase:link": "npx supabase@latest link --project-ref wkoqeffrwrlfvfcvqhee",
    "supabase:schema": "npx supabase@latest db dump --linked -f schema.sql",
    "bmad:refresh": "bmad-method install -f -i codex",
    "bmad:list": "bmad-method list:agents",
    "bmad:validate": "bmad-method validate"
  },
  "keywords": [
    "electron",
    "voice-to-text",
    "whisper",
    "transcription"
  ],
  "author": "CrocoVoice",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "@nut-tree-fork/nut-js": "^4.1.0",
    "dotenv": "^16.3.1",
    "electron-squirrel-startup": "1.0.1",
    "openai": "^4.20.1",
    "sqlite3": "^5.1.7",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.11.1",
    "electron": "^35.7.5"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "CrocoVoice",
        "appBundleId": "com.crocovoice.app",
        "icon": "assets/tray-icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "CrocoVoice",
            "authors": "CrocoVoice",
            "description": "Voice-to-Text application using Electron and OpenAI Whisper"
          }
        }
      ],
      "outDir": "dist"
    }
  }
}
