# OpenAI API key
# https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Supabase (client) credentials
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Optional settings
CROCOVOICE_LANGUAGE=fr
# Example: Command+Shift+R (macOS) or Ctrl+Shift+R (Windows/Linux)
CROCOVOICE_SHORTCUT=Ctrl+Shift+R

# Quota (optional)
# local: local-only quota (dev)
# hybrid: try server functions, fallback to local/cache
# server: require server quota checks (recommended for production FREE paywall)
CROCOVOICE_QUOTA_MODE=local
# Override weekly quota words for local dev/testing (server-side uses Supabase function env WEEKLY_QUOTA_WORDS)
CROCOVOICE_WEEKLY_QUOTA_WORDS=1000
# TTL for cached server quota snapshot (ms)
CROCOVOICE_QUOTA_CACHE_TTL_MS=300000

# History retention & sync limits
# Set to 0 to disable purge.
CROCOVOICE_HISTORY_RETENTION_DAYS_FREE=14
CROCOVOICE_HISTORY_RETENTION_DAYS_PRO=365
# Sync upload window (how many local history rows are considered each sync)
CROCOVOICE_HISTORY_SYNC_LIMIT_FREE=1000
CROCOVOICE_HISTORY_SYNC_LIMIT_PRO=5000

# Stripe (optional fallback: hosted checkout / portal)
STRIPE_CHECKOUT_URL=https://your-domain/stripe/checkout
STRIPE_PORTAL_URL=https://your-domain/stripe/portal
STRIPE_RETURN_URL=https://app.crococlick.com/signup-crocovoice
